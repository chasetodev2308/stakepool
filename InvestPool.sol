    function executeBackBuy() external;
}

contract InvestPool is Pausable, ReentrancyGuard, Ownable {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    uint private min = 10 * 10 ** 18;
    uint private max = 1000 * 10 ** 18;
    uint private constant RATE_PERCISION = 10000;
    address public investToken = 0x55d398326f99059fF775485246999027B3197955;
    address public backAddr = address(0);
    address public marketAddr = address(0);
    mapping(uint256 => bool) public isUsedRand;
    mapping(address => uint8) public parents;
    mapping(address => bool) public isRewardSigner;
    mapping(address => bool) admins;

    bytes32 public constant DOMAIN_TYPEHASH =
        keccak256(
            "EIP712Domain(string name,uint256 chainId,address verifyingContract)"
        );
    bytes32 public constant WITHDRAW_REWARDS_PERMIT_TYPEHASH =
        keccak256(
            "claim(address account,address token,uint256 amount,uint256 rand)"
        );
    bytes32 public immutable DOMAIN_SEPARATOR;

    event Invest(
        address user,
        address parent,
        string sn,
        uint256 amount,
        uint8 investType,
        uint256 blockTime
    );

    event Claimed(
        address user,
        address token,
        uint256 rand,
        uint256 reward,
        uint256 blockTime
    );

    constructor() {
        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                DOMAIN_TYPEHASH,
                keccak256(bytes("InvestPool")),
                block.chainid,
                address(this)
            )
        );
    }

    modifier onlyAdmin() {
        require(
            owner() == _msgSender() || admins[_msgSender()],
            "Ownable: caller is not the owner"
        );
        _;
    }

    function invest(
        uint amount,
        address parent,
        string memory sn
    ) external payable whenNotPaused nonReentrant {
        require(amount >= min, "amount can not less min");
        require(amount <= max, "amount can not more than max");
        require(parents[parent] > 0, "parent not is exist");
        uint backAmount = 0;
        uint realAmount = 0;
        uint8 investType = 1;
        if (parents[parent] == 1) {
            backAmount = amount.mul(2000).div(RATE_PERCISION);
            realAmount = amount.sub(backAmount);
            investType = 0;
        } else {
            backAmount = amount.mul(1000).div(RATE_PERCISION);
            realAmount = amount.sub(backAmount);
            investType = 1;
        }
        SafeERC20.safeTransferFrom(
            IERC20(investToken),
            msg.sender,
            backAddr,
            backAmount
        );
        SafeERC20.safeTransferFrom(
            IERC20(investToken),
            msg.sender,
            marketAddr,
            realAmount
        );
        IBackBuy(backAddr).executeBackBuy();
        parents[parent] = parents[parent] + 1;
        parents[msg.sender] = parents[msg.sender] + 1;
        emit Invest(
            msg.sender,
            parent,
            sn,
            amount,
            investType,
            block.timestamp
        );
    }

    function claim(
        address account,
        uint amount,
        address token,
        uint rand,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external whenNotPaused nonReentrant {
        require(account != address(0), "account can not be address 0");
        require(amount > 0, "amount can not be 0");
        require(rand > 0, "rand can not be 0");
        require(parents[account] > 0, "account not staked");
        require(account == msg.sender, "caller must be account");
        require(!isUsedRand[rand], "rand used");
        isUsedRand[rand] = true;

        address signatory = recoverWithdrawRewardsSign(
            account,
            token,
            amount,
            rand,
            v,
            r,
            s
        );
        require(signatory != address(0), "invalid signature");
        require(isRewardSigner[signatory], "unauthorized");
        SafeERC20.safeTransferFrom(
            IERC20(token),
            marketAddr,
            account,
            amount
        );
        emit Claimed(account, token, rand, amount, block.timestamp);
    }


    function recoverWithdrawRewardsSign(
        address account,
        address token,
        uint amount,
        uint rand,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public view returns (address) {
        bytes32 structHash = keccak256(
            abi.encode(
                WITHDRAW_REWARDS_PERMIT_TYPEHASH,
                account,
                token,
                amount,
                rand
            )
        );
        bytes32 digest = keccak256(
            abi.encodePacked("\x19\x01", DOMAIN_SEPARATOR, structHash)
        );
        return ecrecover(digest, v, r, s);
    }

    function backBuy(uint256 amount) external onlyAdmin {
        SafeERC20.safeTransferFrom(
            IERC20(investToken),
            marketAddr,
            backAddr,
            amount
        );
        IBackBuy(backAddr).executeBackBuy();
    }

    function takeToken(
        address token,
        address to,
        uint amount
    ) external onlyOwner {
        if (token == address(0)) {
            _safeTransferETH(to, amount);
        } else {
            IERC20(token).safeTransfer(to, amount);
        }
    }

    function _safeTransferETH(address to, uint value) internal {
        (bool success, ) = to.call{value: value}(new bytes(0));
        require(success, "TransferHelper: ETH_TRANSFER_FAILED");
    }

    function addSigner(address signer, bool isSigner) external onlyOwner {
        isRewardSigner[signer] = isSigner;
    }

    function setParam(uint _min, uint _max) external onlyOwner {
        min = _min;
        max = _max;
    }

    function setInvestToken(address token) external onlyOwner {
        investToken = token;
    }

    function setBackAddr(address _backAddr) external onlyOwner {
        backAddr = _backAddr;
    }

    function setMarketAddr(address _marketAddr) external onlyOwner {
        marketAddr = _marketAddr;
    }

    function setAdmin(address admin, bool isAdd) public onlyOwner {
        admins[admin] = isAdd;
    }

    function setRoot(address root, uint8 num) public onlyOwner {
        parents[root] = num;
    }
}
